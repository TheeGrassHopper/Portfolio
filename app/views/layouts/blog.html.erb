<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8 ; <%= @seo_keywords %>"/>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

   
    <% if current_user.is_a?(User)  %>
    	<%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <%else%>
    	<%= link_to "Register", new_user_registration_path %>
    	<%= link_to "Login", new_user_session_path %>
    <%end%>
  
    <%= yield %>
  
     <%= render "shared/nav", location: "bottom" %>

    <div>
      <% if session[:source] %>
        Thanks for visiting me form <%= session[:source] %>      
      <% end %>
    </div>
  
  </body>
</html>
